<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @survey.name %>
</p>

<ol>
<% for question in @survey.questions %>
  <li><%= question.content %></li>
    <ul>
      <% for answer in question.answers %>
        <li> <%=h answer.content%> </li>
      <% end %>
    </ul>
<% end %>
</ol>

<%= link_to 'Edit', edit_survey_path(@survey) %> |
<%= link_to 'Back', surveys_path %>
